<h1>Do Me!</h1>

<h2>Stuff that isn't done</h2>

<ul>
  {{#each todos}}
    {{#unless this.completed}}
      <li>
        {{this.item}}

        <form action="todo/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="completed" value="true">
          <button type="submit">Did that $&!#!</button>
        </form>

        {{> todo/delete-todo}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Stuff I did</h2>

<ul>
  {{#each todos}}
    {{#if this.completed}}
      <li>
        {{this.item}}

        <form action="todo/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="completed" value="false">
          <button type="submit">I didn't actually do it...</button>
        </form>

        {{> todo/delete-todo}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add Stuff to Do</h2>
<form class="create-update-form" action="todo" method="POST">

  <div class="form-group">
    <label for="todo">Item:</label>
    <input type="text" id="todo" name="item">
  </div>

  <div class="form-group">
    <label for="Completed">Done?</label><br>
    <input type="radio" name="completed" value="0" checked> Do this!<br>
    <input type="radio" name="completed" value="1"> Done
  </div>

  <button type="submit">Add Item</button>
</form>
