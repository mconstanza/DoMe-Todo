<div class='container'>

  <div class='header text-center'>
    <h1>Do Me!</h1>
  </div>

  <div class='row text-center'>
    <div class='col-md-6'>
      <h2>Stuff that isn't done</h2>

      <ul id='todo-not-completed'>
        {{#each todos}}
          {{#unless this.completed}}
            <li class='todo' id='{{this.id}}'>
              {{this.item}}

              <form id='{{this.id}}' action="todo/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="completed" value="true">
                <button type="submit">Did that $&!#!</button>
              </form>

              {{> todo/delete-todo}}
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class='col-md-6'>
      <h2>Stuff I did</h2>

      <ul>
        {{#each todos}}
          {{#if this.completed}}
            <li>
              {{this.item}}

              <form action="todo/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="completed" value="false">
                <button type="submit">I didn't actually do it...</button>
              </form>

              {{> todo/delete-todo}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div> <!--col 6 -->
  </div> <!--row -->


  <div class='row text-center'>
    <h2>Add Stuff to Do</h2>
    <form class="create-update-form" action="todo" method="POST">

      <div class="form-group">
        <label for="todo">Item:</label>
        <input type="text" id="todo" name="item">
      </div>

      <div class="form-group">
        <input type="hidden" name="completed" value="0" checked> I need to do this!<br>
        <!-- <input type="radio" name="completed" value="1"> Done -->
      </div>

      <button type="submit">Add Item</button>
    </form>
  </div> <!--row-->
</div>
